<div xmlns:py="http://genshi.edgewall.org/" class="content">
<py:if test="formErrors">
  <div class="form_error">
    <p>Errors were encountered processing this form</p>
    <ul>
    <py:for each="error in formErrors">
      <li/>${error}
    </py:for>
    </ul>
  </div>
</py:if>
<py:for each="field in form">
  <p id="${field['label']}" class="field_${field['state']}"><label for="id_${field['label']}">${field['label']}:</label> ${field['markup']}
  <span id="${field['label']}_message" class="field_message">
  <py:if test="field['errors']">
    <ul>
    <py:for each="errorText in field['errors']">
      <li>${errorText}</li>
    </py:for>
    </ul>    
  </py:if>
  </span>
  </p>
</py:for>
<py:if test="redirect">
  <input type="hidden" name="redirect" value="${redirect}"/>
</py:if>
</div>