<div xmlns:py="http://genshi.edgewall.org/" class="login_form">
  <py:choose test="failed">
    <py:when test="True">
      <span class="login_failed">Invalid Username or Password</span>
    </py:when>
    <py:otherwise></py:otherwise>
  </py:choose>
  <form action="/login" method="POST">
    <p>Login: <input type="text" name="login"/></p>
    <p>Password: <input type="password" name="pass"/></p>
    <p><input type="submit" Value="Login"/></p>
  </form>
</div>