<div xmlns:py="http://genshi.edgewall.org/" class="login_form">
  <py:choose test="failed">
    <py:when test="True">
      <span class="login_failed">Invalid Username or Password</span>
    </py:when>
    <py:otherwise></py:otherwise>
  </py:choose>
  <form action="/login" method="POST" class="login">
    <p><label for="login">Login:</label><input type="text" name="login"/></p>
    <p><label for="password">Password:</label><input type="password" name="pass"/></p>
    <p><input type="submit" Value="Login" class="submit"/></p>
  </form>
</div>