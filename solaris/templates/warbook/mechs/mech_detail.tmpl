<div xmlns:py="http://genshi.edgewall.org/" class="content">
  <h1>${mech.mech_name} ${mech.mech_code}</h1>
  <p>
    ${mech.tonnage} Tons, ${mech.move_walk()}/${mech.move_run()}/${mech.move_jump()}
    <em>BV:</em> ${mech.bv_value}
    <em>Cost:</em> ${mech.credit_value}
  </p>
  <div class="${mech.motive_type}_armour">
    <py:for each="location in mech.locations.all()">
    <div class="armour_location" id="armour_${location.location_code()}">
       <div class="armour_header">${location.location_code()}</div>
       <div class="armour_armour">${location.armour}</div>
       <py:if test="location.structure">
          <div class="armour_structure">${location.structure}</div>
       </py:if>
    </div>
    </py:for>
  </div>

  <div class="${mech.motive_type}_criticals">
    <py:for each="location in mech.locations.all()">
      <py:if test="location.structure">
         <div class="critical_table" id="criticals_${location.location_code()}">
           <div class="critical_header">${location.location_name()}</div>
           <py:for each="(slot, item) in enumerate(location.get_criticals())">
             <py:if test="slot == 6">
                <hr/>
             </py:if>
             <py:choose test="item">
                <py:when test="None">

 
                  <div>${(slot%6)+1}<span class="item_noncrittable">-- No Item --</span></div>
                </py:when>
                <py:otherwise>
                  <div>${(slot%6)+1}
                    <py:choose test="item.equipment.equipment.crittable">
                      <py:when test="True"><span class="item_crittable">${item.get_equipmentname()}</span></py:when>
                      <py:otherwise><span class="item_noncrittable">${item.get_equipmentname()}</span></py:otherwise>
                    </py:choose>
                  </div>
                </py:otherwise>
             </py:choose>
           </py:for>
         </div>
      </py:if>
    </py:for>
  </div>  
</div>

